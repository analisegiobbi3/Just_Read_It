<body>
    <main class="container">
        <header class="text-center">
           
            <h2  id="mainHeader" class="pb-5 position-relative"> See what other people are reading</h2>
        </header>
        <body class="row mb-5" data-masonry='{"percentPosition": true }'>
            {{#if books.length}}
            <section id="userInfo">
                {{#each books as |book|}}
                <div id="userBooks">
                {{> book-info book}}
                </div>  
                {{/each}}
            </section>
            {{else}}
            <h4 class="pb-4 has-text-centered is-bold">No one has shared their books with you yet.</h4>
            {{/if}}
        </body>

    </main>
</body>
<script src="/js/masonryGrid.js"></script>
